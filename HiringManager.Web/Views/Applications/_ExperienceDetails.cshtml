@using HiringManager.Models.ViewModel
@model ApplicationFormViewModel

<form asp-action="SaveExperienceDetails" method="post">
    <input type="hidden" name="sessionId" value="@Model.ApplicationDetails.SessionId" />
    <input type="hidden" asp-for="ExperienceDetails.Id" />

    <div class="form-group">
        <label asp-for="ExperienceDetails.TotalExp">Total Experience</label>
        <input asp-for="ExperienceDetails.TotalExp" class="form-control"
               placeholder="e.g., 5 years" />
        <span asp-validation-for="ExperienceDetails.TotalExp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExperienceDetails.PreviousCompanies">Previous Companies (Optional)</label>
        <textarea asp-for="ExperienceDetails.PreviousCompanies" class="form-control" rows="2"></textarea>
        <span asp-validation-for="ExperienceDetails.PreviousCompanies" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExperienceDetails.CurrentCompany">Current Company (Optional)</label>
        <input asp-for="ExperienceDetails.CurrentCompany" class="form-control" />
        <span asp-validation-for="ExperienceDetails.CurrentCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExperienceDetails.Skills">Skills</label>
        <textarea asp-for="ExperienceDetails.Skills" class="form-control" rows="3"
                  placeholder="List your key skills separated by commas"></textarea>
        <span asp-validation-for="ExperienceDetails.Skills" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExperienceDetails.Roles">Roles & Responsibilities</label>
        <textarea asp-for="ExperienceDetails.Roles" class="form-control" rows="3"
                  placeholder="Describe your roles and responsibilities"></textarea>
        <span asp-validation-for="ExperienceDetails.Roles" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" name="action" value="SubmitApplication" class="btn btn-success">
            Submit Application
        </button>
        <button type="submit" name="action" value="Back" class="btn btn-secondary">
            Back
        </button>
        <button type="submit" name="action" value="SaveDraft" class="btn btn-outline-secondary">
            Save Draft
        </button>
    </div>
</form>